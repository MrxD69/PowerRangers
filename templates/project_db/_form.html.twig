{{ form_start(form) }}
<div class="form-group">
    {{ form_label(form.domaine) }}
    {{ form_widget(form.domaine, { 'attr': {'class': 'form-select', 'placeholder': 'Select a domain'} }) }}
    {% if form.domaine.vars.errors|length > 0 %}
        <div class="text-danger">
            {% for error in form.domaine.vars.errors %}
                <p>{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
</div>

<div class="form-group">
    {{ form_label(form.description) }}
    {{ form_widget(form.description, { 'attr': {'class': 'form-control custom-textarea', 'rows': 6, 'placeholder': 'Enter project description here...'} }) }}
    {% if form.description.vars.errors|length > 0 %}
        <div class="text-danger">
            {% for error in form.description.vars.errors %}
                <p>{{ error.message }}</p>
            {% endfor %}
        </div>
    {% endif %}
</div>

<div class="form-group">
    <button type="submit" class="btn btn-success">Update</button>
</div>
{{ form_end(form) }}
