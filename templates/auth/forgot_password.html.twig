{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="title"><span>Forgot Password</span></div>
        <form action="{{ path('app_forgot_password') }}" method="POST">
            <div class="row">
                <i class="fas fa-envelope"></i>
                <input type="email" name="email" placeholder="Enter your email" required />
            </div>

            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-message flash-{{ type }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}

            <div class="row button">
                <input type="submit" value="Send Reset Link" />
            </div>
            <div class="signup-link">Remembered your password? <a href="{{ path('app_login') }}">Login</a></div>
        </form>
    </div>
{% endblock %}
