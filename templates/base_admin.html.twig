</div>

<!-- JavaScript to create the chart -->
<script>
    // Example of how data could look, replace this with dynamic data (from the backend, e.g. via Twig)
    var projectData = {
        labels: ['Domain 1', 'Domain 2', 'Domain 3', 'Domain 4'], // Example domain names
        datasets: [{
            label: 'Projects by Domain',
            data: [10, 20, 30, 40], // Example project count per domain
            backgroundColor: ['#FF5733', '#33FF57', '#3357FF', '#FF33A8'], // Custom segment colors
            hoverBackgroundColor: ['#FF7043', '#66BB6A', '#42A5F5', '#FF4081'],
            borderWidth: 1
        }]
    };

    var options = {
        responsive: true,
        plugins: {
            legend: { position: 'top' },
            tooltip: {
                callbacks: {
                    label: function(tooltipItem) {
                        return tooltipItem.label + ': ' + tooltipItem.raw + ' projects';
                    }
                }
            }
        }
    };

    var ctx = document.getElementById('projectsByDomain').getContext('2d');
    var projectChart = new Chart(ctx, {
        type: 'doughnut', // Doughnut chart
        data: projectData,
        options: options
    });
</script>

