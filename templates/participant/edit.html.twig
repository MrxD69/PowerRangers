{% extends 'base.html.twig' %}

{% block title %}Modifier Participant{% endblock %}

{% block body %}
    <style>
        .container-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            box-sizing: border-box;
        }

        .container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
            color: #555;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 6px;
            box-sizing: border-box;
            font-size: 16px;
        }

        .form-group input:focus {
            outline: none;
            border-color: #20B2AA;
        }

        .btn {
            display: inline-block;
            width: 100%;
            padding: 12px;
            background-color: #20B2AA;
            color: #fff;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 16px;
            text-align: center;
            text-decoration: none;
            line-height: 1;
        }

        .btn:hover {
            background-color: #8eeaa5;
        }

        .footer {
            margin-top: 15px;
            text-align: center;
        }

        .footer a {
            color: #20B2AA;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>

    <div class="container-wrapper">
        <div class="container">
            <h2>Modifier Participant</h2>
            {{ form_start(form) }}

            <div class="form-group">
                <label for="nom">Nom :</label>
                {{ form_widget(form.nom, {'attr': {'placeholder':'Nom du participant'}}) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group">
                <label for="prenom">Prénom :</label>
                {{ form_widget(form.prenom, {'attr': {'placeholder':'Prénom du participant'}}) }}
                {{ form_errors(form.prenom) }}
            </div>

            <div class="form-group">
                <label for="age">Âge :</label>
                {{ form_widget(form.age, {'attr': {'placeholder':'Âge du participant'}}) }}
                {{ form_errors(form.age) }}
            </div>

            <div class="form-group">
                <label for="email">Email :</label>
                {{ form_widget(form.email, {'attr': {'placeholder':'Email du participant'}}) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                <label for="numTelephone">Numéro de téléphone :</label>
                {{ form_widget(form.num_telephone, {'attr': {'placeholder':'Numéro de téléphone'}}) }}
                {{ form_errors(form.num_telephone) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Modifier</button>
            </div>

            {{ form_end(form) }}

            <div class="footer">
                <a href="{{ path('app_participant_index') }}">Retour à la liste</a>
            </div>

            <div style="margin-top: 20px;">
                {{ include('participant/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
