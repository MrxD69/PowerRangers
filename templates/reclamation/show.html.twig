{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Reclamation Details</h1>

        <table class="table table-bordered">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ reclamation.Date ? reclamation.Date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ reclamation.Etat }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ reclamation.Message }}</td>
            </tr>
            <tr>
                <th>Projet</th>
                <td>{{ reclamation.projectDb.domaine }}</td>
            </tr>

            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>

            <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-primary btn-sm">
                <i class="fas fa-edit"></i> Edit
            </a>

            {{ include('reclamation/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
