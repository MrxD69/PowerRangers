{% block body %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <style>
        #myChart {
            width: 100%;
            height: auto;
            max-height: 400px;
        }
    </style>
    <canvas id="myChart"></canvas>

    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var fileSizeChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: {{ chart.data.labels|json_encode|raw }},
                datasets: [{
                    label: 'Number of Reclamations ', // Adjusted label
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1,
                    data: {{ chart.data.datasets[0].data|json_encode|raw }}
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Nombres des Reclamations'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Reclamations' // Adjusted x-axis label
                        }
                    }
                }
            }
        });
    </script>
    <a href="{{ path('app_reclamationc') }}" class="btn btn-primary btn-sm">
        <i class="fas fa-arrow-left"></i> Back to list
    </a>

{% endblock %}
