<form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réclamation ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
    <button type="submit" class="btn btn-danger btn-sm">
        <i class="fas fa-trash-alt"></i> Supprimer
    </button>
</form>
