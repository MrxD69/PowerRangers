{% extends 'base.html.twig' %}

{% block stylesheets %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:300;400;600;700;800&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/admin_profile.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="main-body">
            <div class="row gutters-sm">
                <!-- Left Column: Profile Picture and Information -->
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body text-center">
                            <img src="{{ user.profilePicture ?: asset('uploads/profile_pictures/khalil.jpg') }}"
                                 alt="Admin Profile Picture"
                                 class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>{{ user.nom }} {{ user.prenom }}</h4>
                                <p class="text-secondary mb-1">Administrator</p>
                                <p class="text-muted font-size-sm">{{ user.location ?: 'Not provided' }}</p>
                                <a href="{{ path('home_index') }}" class="btn btn-outline-primary">Home</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Right Column: Profile Details -->
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3"><h6 class="mb-0">Full Name</h6></div>
                                <div class="col-sm-9 text-secondary">{{ user.nom }} {{ user.prenom }}</div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3"><h6 class="mb-0">Email</h6></div>
                                <div class="col-sm-9 text-secondary">{{ user.email }}</div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3"><h6 class="mb-0">Phone</h6></div>
                                <div class="col-sm-9 text-secondary">{{ user.phone ?: 'Not provided' }}</div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3"><h6 class="mb-0">Location</h6></div>
                                <div class="col-sm-9 text-secondary">{{ user.location ?: 'Not provided' }}</div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3"><h6 class="mb-0">Role</h6></div>
                                <div class="col-sm-9 text-secondary">Admin</div>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Admin Information -->
                    <div class="card h-100">
                        <div class="card-body">
                            <h6 class="d-flex align-items-center mb-3">Admin Overview</h6>
                            <p class="text-secondary">This admin profile can oversee the following functionalities:</p>
                            <ul>
                                <li>Manage Users</li>
                                <li>Review Reports</li>
                                <li>Access Platform Metrics</li>
                                <li>Moderate Content</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
