{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <br>
    <div class="container contact">
        <div class="row">
            <div class="col-md-3">
                <div class="contact-info">
                    <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="Contact Us Image"/>
                    <h2>Reclamation</h2>
                    <h4>We value your feedback!</h4>
                </div>
            </div>
            <div class="col-md-9">
                <div class="contact-form">
                    <!-- Search Input -->

                    <p>Total Reclamations: {{ reclamations|length }}</p>
                    <table class="table">
                        <thead>
                        <tr>
                            <th><input type="checkbox" id="select-all"></th>
                            <th>Date</th>
                            <th>Etat</th>
                            <th>Message</th>
                            <th>Projet</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for reclamation in reclamations %}
                            <tr>
                                <td><input type="checkbox" name="selectedIds[]" value="{{ reclamation.id }}"></td>
                                <td>{{ reclamation.Date ? reclamation.Date|date('Y-m-d') : '' }}</td>
                                <td>{{ reclamation.Etat }}</td>
                                <td>{{ reclamation.Message }}</td>
                                <td>{{ reclamation.Projet.domaine }}</td>
                                <td>
                                    <form action="{{ path('app_reponse_new', {'lid': reclamation.id}) }}" method="post" style="display: inline-block; margin-right: 10px;">
                                        <button class="btn btn-dark" {{ reclamation.etat == 'traité' ? 'disabled' : '' }}>Traiter</button>
                                    </form>

                                    <form action="{{ path('app_reclamation_deletee', {'id': reclamation.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?')" style="display: inline;">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                        <button {{ reclamation.etat == 'non traité' ? '' : 'disable' }} type="submit" class="btn btn-danger">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

{% endblock %}