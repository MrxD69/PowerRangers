{% extends 'base.html.twig' %}

{% block title %}Offer Details{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Offer Details</h1>

        <div class="table-responsive">
            <table class="table table-bordered shadow-sm">
                <tbody>
                <tr>
                    <th scope="row" class="table-dark">Id</th>
                    <td>{{ commande_db.id }}</td>
                </tr>
                <tr>
                    <th scope="row" class="table-dark">Price</th>
                    <td>{{ commande_db.prix }}</td>
                </tr>
                <tr>
                    <th scope="row" class="table-dark">Description</th>
                    <td>{{ commande_db.description }}</td>
                </tr>
                <tr>
                    <th scope="row" class="table-dark">Technology</th>
                    <td>{{ commande_db.technologie }}</td>
                </tr>
                <tr>
                    <th scope="row" class="table-dark">Deadline </th>
                    <td>{{ commande_db.datefin ? commande_db.datefin|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="{{ path('app_commande_db_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a href="{{ path('app_commande_db_edit', {'id': commande_db.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
            {{ include('commande_db/_delete_form.html.twig', { 'class': 'd-inline' }) | raw }}
        </div>
    </div>
{% endblock %}
