{# templates/commande_db/pdf_template.html.twig #}

<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 30px;
        }
        h1 {
            text-align: center;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }
        th {
            background-color: #f4f4f4;
        }
    </style>
</head>
<body>
<h1>Offer Details</h1>
<table>
    <tr>
        <th>ID</th>
        <td>{{ commande_db.id }}</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>{{ commande_db.prix }}</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>{{ commande_db.description }}</td>
    </tr>
    <tr>
        <th>Technology</th>
        <td>{{ commande_db.technologie }}</td>
    </tr>
    <tr>
        <th>Deadline</th>
        <td>{{ commande_db.datefin ? commande_db.datefin|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
</table>
</body>
</html>
